<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="erato_framework.schemifier.class">Clio\Component\Tool\Schemifier\Schemifier</parameter>
        <parameter key="erato_framework.schemifier_field_mapper_registry.class">Clio\Component\Tool\Schemifier\FieldMapperRegistry</parameter>
        <parameter key="erato_framework.schemifier_factory.normalizer.class">Erato\Core\Schemifier\Factory\NormalizerSchemifierFactory</parameter>
		<parameter key="erato_framework.class_metadata_mapping_factory.schemifier.class">Erato\Core\Metadata\Mapping\Factory\SchemifierMappingFactory</parameter>
    </parameters>

	<services>
		<!-- Factories of our provides -->
		<service
			id="erato_framework.schemifier_factory.normalizer"
			class="%erato_framework.schemifier_factory.normalizer.class%"
		>
			<argument type="service" id="erato_framework.normalizer" on-invalid="null" />
			<argument type="service" id="erato_framework.schemifier_field_mapper_registry" on-invalid="null" />
		</service>

		<service id="erato_framework.schemifier_factory" alias="erato_framework.schemifier_factory.normalizer" />

		<service 
			id="erato_framework.class_metadata_mapping_factory.schemifier.default"
			class="%erato_framework.class_metadata_mapping_factory.schemifier.class%"
		>
			<argument type="service" id="erato_framework.schemifier_factory"/>
		</service>


		<service 
			id="erato_framework.schemifier_field_mapper_registry"
			class="%erato_framework.schemifier_field_mapper_registry.class%"
		>
		</service>
	</services>	
</container>


