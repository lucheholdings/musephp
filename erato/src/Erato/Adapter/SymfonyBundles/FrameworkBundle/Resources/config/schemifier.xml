<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="erato_framework.schemifier.class">Clio\Component\Schemifier\Schemifier</parameter>
        <parameter key="erato_framework.schemifier_field_mapper_registry.class">Clio\Component\Schemifier\FieldMapperRegistry</parameter>
        <parameter key="erato_framework.schemifier_factory.normalizer.class">Clio\Extra\Schemifier\Factory\NormalizerSchemifierFactory</parameter>
    </parameters>

	<services>
		<!-- Factories of our provides -->
		<service
			id="erato_framework.schemifier_factory.normalizer"
			class="%erato_framework.schemifier_factory.normalizer.class%"
		>
			<argument type="service" id="erato_framework.normalizer" on-invalid="null" />
			<argument type="service" id="erato_framework.schemifier_field_mapper_registry" on-invalid="null" />
		</service>

		<service id="erato_framework.schemifier_factory" alias="erato_framework.schemifier_factory.normalizer" />

	</services>	
</container>


