<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="erato_framework.serializer.class">Clio\Component\Tool\Serializer\Serializer</parameter>

		<parameter key="erato_framework.serializer.context_factory.class">Erato\Core\Serializer\ContextFactory</parameter>
        <parameter key="erato_framework.serializer.strategy.class">Clio\Component\Tool\Serializer\Strategy</parameter>
        <parameter key="erato_framework.serializer.strategy_collection.class">Clio\Component\Tool\Serializer\Strategy\PriorityStrategyCollection</parameter>
        <parameter key="erato_framework.serializer.normalizer_strategy.class">Clio\Extra\Serializer\Strategy\NormalizerStrategy</parameter>
        <parameter key="erato_framework.serializer.json_strategy.class">Clio\Component\Tool\Serializer\Strategy\JsonSerializableStrategy</parameter>
        <parameter key="erato_framework.serializer.php_strategy.class">Clio\Component\Tool\Serializer\Strategy\PhpSerializableStrategy</parameter>
    </parameters>

	<services>
		<service
			id="erato_framework.serializer"
			alias="erato_framework.serializer.serializer"
		/>

		<service
			id="erato_framework.serializer.serializer"
			class="%erato_framework.serializer.class%"
		>
			<argument type="service" id="erato_framework.serializer.strategy" />
			<argument type="service" id="erato_framework.serializer.context_factory" />
		</service>

		<service
			id="erato_framework.serializer.context_factory"
			class="%erato_framework.serializer.context_factory.class%"
		>
			<argument type="service" id="erato_framework.coding_standard" />
		</service>

		<service
			id="erato_framework.serializer.strategy"
			alias="erato_framework.serializer.strategy_collection"
		/>

		<service
			id="erato_framework.serializer.strategy_collection"
			class="%erato_framework.serializer.strategy_collection.class%"
		>
		</service>


		<!-- Default Strategies -->
		<service
			id="erato_framework.serializer.strategy.normalizer.default"
			class="%erato_framework.serializer.normalizer_strategy.class%"
		>
			<argument type="service" id="erato_framework.normalizer" on-invalid="ignore" />
			<argument type="service" id="erato_framework.coder" on-invalid="ignore" />
		</service>

		<service
			id="erato_framework.serializer.strategy.json.default"
			class="%erato_framework.serializer.json_strategy.class%"
		>
		</service>

		<service
			id="erato_framework.serializer.strategy.php.default"
			class="%erato_framework.serializer.php_strategy.class%"
		>
		</service>
	</services>	
</container>

