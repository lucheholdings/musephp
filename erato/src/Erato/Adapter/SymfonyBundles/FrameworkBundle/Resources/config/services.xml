<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- Convention over Configuration -->
        <parameter key="erato_framework.coc.class">Erato\Adapter\SymfonyBundles\FrameworkBundle\Coding\CustomizableCodingStandard</parameter>
    </parameters>

    <services>
        <service
			id="erato_framework.coc.default"
			class="%erato_framework.coc.class%"
		>
			<argument></argument>
		</service>

        <service id="erato_framework.container_registry" alias="clio_component.container_registry"/>
    </services>
</container>
