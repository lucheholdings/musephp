<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


	<parameters>
		<!-- Registry -->
	    <parameter key="calliope_framework.schema.registry.class">Calliope\Core\Schema\MetadataRegistry</parameter>
	    <parameter key="calliope_framework.schema.reference_registry.class">Erato\Adapter\SymfonyBundles\FrameworkBundle\Metadata\SchemaRegistry</parameter>

	    <parameter key="calliope_framework.schema.registry.factory_loader.class">Clio\Component\Pattern\Registry\Loader\MappedFactoryLoader</parameter>
		
		<!-- -->
        <parameter key="calliope_framework.schema.schema_metadata_factory.class">Calliope\Core\Schema\Factory\SchemaMetadataFactory</parameter>
	</parameters>

	<services>
		<!-- Registry -->
		<service
			id="calliope_framework.schema.registry"
			class="%calliope_framework.schema.registry.class%"
		>
			<argument type="service" id="calliope_framework.schema.schema_metadata_factory"/>
		</service>

		<!-- Loader -->
		<service
			id="calliope_framework.schema.registry.factory_loader"
			class="%calliope_framework.schema.registry.factory_loader.class%"
		>
			<argument type="service" id="calliope_framework.schema.schema_metadata_factory"/>
		</service>

		<!-- Factory -->
		<service
			id="calliope_framework.schema.schema_metadata_factory"
			class="%calliope_framework.schema.schema_metadata_factory.class%"
		>
			<argument type="service" id="erato_framework.schema.registry"/>
			<argument type="service" id="calliope_framework.schema.mapping_factory"/>
		</service>

		<!-- Mapping Factory -->
		<service
			id="calliope_framework.schema.mapping_factory"
			alias="calliope_framework.schema.mapping_factory.collection"
		/>

		<service
			id="calliope_framework.schema.mapping_factory.collection"
			class=""
		>
		</service>

		<!-- Injector -->
		<service
			id="calliope_framework.schema.mapping_injectors"
			class="Clio\Component\Injection\Injector"
			factory-service="calliope_framework.schema.mapping_factory"
			factory-method="getInjector"
		>
		</service>

<!--
		<service
			id="calliope_framework.schema.bottom_up_config_loader"
			class=""
		>
			
		</service>

		<service
			id="calliope_framework.schema.config_loader.file_locator"
			class="%calliope_framework.schema.config_loader.file_locator.class%"
		>
			<argument>%kernel.bundles%</argument>
		</service>
-->

	
	</services>
</container>

