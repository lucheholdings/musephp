<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
		<!-- DoctrineCache Factory -->
		<parameter key="clio_component.cache.factory.doctrine.class">Clio\Adapter\SymfonyBundles\ComponentBundle\Cache\Factory\DoctrineCacheFactory</parameter>
		<parameter key="clio_component.cache.provider_factory.doctrine.class">Clio\Adapter\SymfonyBundles\ComponentBundle\Cache\Factory\DoctrineCacheProviderFactory</parameter>
    </parameters>

    <services>
		<!-- Doctrine Cache Factory -->
		<service 
			id="clio_component.cache.factory.doctrine" 
			class="%clio_component.cache.factory.doctrine.class%"
		>
			<argument type="service" id="service_container"/>
		</service>

		<service 
			id="clio_component.cache.provider_factory.doctrine" 
			class="%clio_component.cache.provider_factory.doctrine.class%"
		>
			<argument type="service" id="service_container"/>
		</service>
    </services>
</container>



