<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
	    <parameter key="clio_framework.metadata.registry.class">Clio\Framework\Metadata\ClassMetadataRegistry</parameter>
        <parameter key="clio_framework.metadata.factory.class">Clio\Component\Util\Metadata\BasicClassMetadataFactory</parameter>
        <!-- mapping fatories -->
		<parameter key="clio_framework.metadata.mapping_factory.attribute.class">Clio\Framework\Metadata\Mapping\Factory\AttributeContainerAwareMappingFactory</parameter>
		<parameter key="clio_framework.metadata.mapping_factory.tag.class">Clio\Framework\Metadata\Mapping\Factory\TagContainerAwareMappingFactory</parameter>
    </parameters>

	<services>
		<service
			id="clio_framework.metadata.registry"
			class="%clio_framework.metadata_registry.class%"
		>
			<call method="setClassMetadataFactory">
				<argument type="service" id="clio_framework.metadata_factory" on-invalid="null"/>
			</call>
		</service>

		<service
			id="clio_framework.metadata_factory.default"
			class="%clio_framework.metadata_factory.class%"
		>
		</service>


		<service 
			id="clio_framework.metadata_mapping_factory.attribute.default"
			class="%clio_framework.metadata_mapping_factory.attribute.class%"
			abstract="true"
		>
		</service>
		<service 
			id="clio_framework.metadata_mapping_factory.tag.default"
			class="%clio_framework.metadata_mapping_factory.tag.class%"
			abstract="true"
		>
		</service>
	</services>	
</container>

